---
import Header from '../components/header.astro';
import Footer from '../components/Footer.astro';
import '@fontsource/abril-fatface';
import '@fontsource-variable/open-sans';



interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script src="../scripts/script.js" type="module"></script>
		<title>{title}</title> 
	</head>
	<body>
		<Header />
		
		<main>
			<slot />
		</main>

		<Footer />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: #ffffff;
		
	}
	*,
	::after,
	::before{
		margin:0;
		padding:0;
		box-sizing: border-box;
		
	}

	html {
		font-family: 'Open Sans Variable','Abril Fatface ';
		font-weight: 400;
	}
	body{
		
		background:/* https://grabient.com/HQdhDYBpQZhbwE4bQIwFYXA1b5XQAsADAExGrnAyJSrCImT20osgxA/ */

 linear-gradient(90deg, rgba(234, 227, 217, 1.000) 0.000%, rgba(237, 227, 217, 1.000) 16.667%, rgba(233, 220, 209, 1.000) 33.333%, rgba(223, 207, 196, 1.000) 50.000%, rgba(208, 191, 180, 1.000) 66.667%, rgba(192, 174, 163, 1.000) 83.333%, rgba(177, 160, 149, 1.000) 100.000%);
display: flex;
		flex-direction: column;
		justify-content: center;	
	}

	h3{
		font-weight: 600;
	}
	


